<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <%= stylesheet_link_tag 'index' %>
</head>

<body>

    <div class="mobile_header">        
        <h1 class="logo">Store</h1>
        <input type="text" id="query" name="query">
        <img src="/assets/search_blue.svg" alt="" id="search" title="Search">
        <img src="/assets/tune.svg" alt="" id="custom"  title="Custom search">
    </div>


    <div class="container" id="container">

        <h1>Popular Categories</h1>

        <div class="categories">
            <div class="category_image" style="background: url('/assets/mobile.webp');"></div>
            <p>Mobile</p>

            <div class="category_image" style="background: url('/assets/headset.avif');"></div>
            <p>Headset</p>

            <div class="category_image" style="background: url('/assets/fashion.avif');"></div>
            <p>Fashion</p>

            <div class="category_image" style="background: url('/assets/watches.avif');"></div>
            <p>Watches</p>

            <div class="category_image" style="background: url('/assets/shoes.avif');"></div>
            <p>Shoes</p>
        </div>

        <h1>Latest</h1>

        <div class="items_container" id="items_container"> 
            <% @items.each do |item| %>
                <div class="item_container" onclick="window.location.href='/product/<%= item.id %>'">
                    <div class="product_image" style="background: url('assets/shoes.avif');"></div>
                    <div class="info_container">
                        <p class="product_name"><%= item.brand %> <%= item.name %></p>
                        <p class="product_price">$<%= item.price %></p>
                        <div class="ratings"></div>
                    </div>
                </div>
            <% end %>
        </div>

    </div>

    <div class="dock">

        <img src="/assets/home_solid.svg" alt="">
        <p>Home</p>

        <img src="/assets/category_solid.svg" alt="">
        <p>Category</p>

        <img src="/assets/cart_solid.svg" alt="" id="cart">
        <p>Cart</p>

        <img src="/assets/user_solid_white.svg" alt="" id="account">
        <p>Account</p>

        <% if logged_in? %>
            <img src="/assets/logout_white.svg" alt="" id="logout">
            <p>Logout</p>
        <% else %>
            <img src="/assets/login_white.svg" alt="" id="login">
            <p>Login</p>
        <% end %>

    </div>

    <%# 'home_fetchData'  %>
    <%= javascript_include_tag 'home_clicks' %>
</body>

</html>